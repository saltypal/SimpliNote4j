<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.simplinote.simplinote.NoteController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="saveNoteBtn" text="Save Note"/>
            <Button fx:id="clearNoteBtn" text="Clear"/>
        </HBox>

        <TextArea fx:id="noteTextArea" VBox.vgrow="ALWAYS" wrapText="true"/>
    </VBox>
</AnchorPane>